extends layout/inner

block title
  | Личный кабинет

block content
  include ./section/panel
  .ratings-block
    .container
      .ratings
        a(href="rating.html").ratings__title.link.h4
          | Рейтинг Жизненной силы ваших участников
          svg.icon
            use(xlink:href="assets/img/sprite.svg#icon-shape")
        .ratings__items
          a(href="indicator.html").rating
            .border_r
              span.health 12
              .trend.trend_sm
                span.txt_gradient 14,2
                svg.icon
                  use(xlink:href="assets/img/sprite.svg#icon-arr-t")
            .rating__info
              p.rating__title Участник №1
              p.caption Увеличено на 1,8
          a(href="indicator.html").rating
            .border_r
              span.health 999
              .trend.trend_sm.trend_less
                span.txt_gradient 18,4
                svg.icon
                  use(xlink:href="assets/img/sprite.svg#icon-arr-t")
            .rating__info
              p.rating__title Участник №4
              p.caption Уменьшено на 2
          a(href="indicator.html").rating
            .border_r
              span.health 12
              .trend.trend_sm
                span.txt_gradient 10,8
                svg.icon
